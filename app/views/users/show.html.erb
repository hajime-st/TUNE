<div class="bg-cyan-400 flex justify-center">
  <div class="container aspect-[5/1] bg-slate-500 items-center">
    <%= image_tag @user.avatar.url, class: 'rounded-full object-center' %>
    <%= @user.name %>
    <%= render 'shared/stats', {user: @user} %>
    <%= render 'follow_form' if logged_in? %>
    <% if current_user?(@user) %>
      <p><%= link_to t('defaults.edit'), edit_profile_path %></p>
      <p><%= link_to (t 'defaults.logout'), logout_path, data: { turbo_method: :delete } %></p>
    <% end %>
    
  </div>
</div>