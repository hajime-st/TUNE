<div class="flex mt-4 ml-4 self-start items-center">
  <%= link_to user_path(username: user.username) do %>
    <%= image_tag user.avatar.url, class: 'w-14 rounded-full object-center' %>
  <% end %>
  <div class="flex flex-col ml-10">
    <div class="font-bold "><%= link_to user.name, user_path(username: user.username) %></div>
    <div class="text-sm text-gray-500"><%= link_to "@#{user.name}", user_path(username: user.username) %></div>
  </div>
  <%= render 'follow_form', {user: user} if logged_in? %>
</div>
