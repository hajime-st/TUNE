<div class="flex items-center my-2">
    <%= link_to image_tag(user_theme.user.avatar.url, class:'rounded-full w-11'), user_path(user_theme.user.username), {class:"w-11" } %>
    <%= link_to user_theme.user.name, user_path(user_theme.user.username), {class:"ml-2"} %>
</div>
<div class="border-2 flex items-center mt-2 mb-12">
  <%= link_to image_tag(user_theme.image.url), theme_path(user_theme), {class:"w-1/3 md:w-1/5" } %>
  <%= link_to user_theme.title, theme_path(user_theme), class:"ml-2 ml-6 lg:ml-12 text-m md:text-xl lg:text-2xl font-bold" %>
</div>
