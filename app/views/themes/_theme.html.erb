<div class="flex flex-col items-center">
  <div class="w-full lg:w-4/5 lg:flex  bg-white mt-5">
    <%= image_tag theme.image_url, {class:"object-contain lg:w-80 lg:h-80 overflow-hidden flex-none" } if theme.image_url %>
    <div class="">
      <div class="font-bold text-xl lg:text-4xl bg-cover break-words lg:mt-11 lg:ml-6"><%= link_to theme.title, theme_path(theme) %></div>
      <div class="text-xl lg:text-xl bg-cover break-words lg:mt-3 lg:ml-6"><%= "ジャンル: #{theme.genre.split(",").first}" if theme.genre.present? %></div>
    </div>
  </div>
  <div class="container justify-start border-b pb-5">
    <% if current_user %>
      <%= link_to 'Edit', edit_theme_path(theme) if current_user.own?(theme) %>
      <%= link_to 'Delete', theme_path(theme), data: { turbo_method: :delete } if current_user.own?(theme) %>
    <% end %>
  </div>
</div>