<div class="col-span-1 justify-center justify-self-center">
  <div class="container aspect-[4/5] flex flex-col bg-blue-300">
    <%= link_to theme_path(theme) do %>
      <%= image_tag theme.image_url, {class:"object-contain aspect-square overflow-hidden flex-none opacity-100 hover:opacity-75" } if theme.image_url %>
    <% end %>
      <div>
        <div class="font-bold text-2xl bg-cover break-words"><%= link_to theme.title, theme_path(theme) %></div>
      </div>
  </div>
</div>