<% user ||= current_user %>
<div class="stats">
  <%= link_to following_user_path(user.username) do %>
    <strong id="following">
      <%= user.following.count %>
    </strong>
    following
  <% end %>

  <%= link_to followers_user_path(user.username) do %>
    <strong id="followers">
      <%= user.followers.count %>
    </strong>
    followers
  <% end %>
</div>