<div class="mb-8">
  <div class="flex items-center my-2">
    <%= link_to image_tag(comment.user.avatar.url, class:'rounded-full w-11'), user_path(comment.user.username), {class:"w-11" } %>
    <%= link_to comment.user.name, user_path(comment.user.username), {class:"ml-2"} %>
  </div>
  <div class="flex">
    <div class="ml-12"><%= simple_format(comment.body) %></div>
    <div class="grow"></div>
    <% if current_user %>
      <% if current_user.own?(comment) %>
        <%= button_to theme_comment_path(theme, comment), { method: :delete, form: { data: { turbo_confirm: "本当に削除しますか？" }}} do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <line x1="4" y1="7" x2="20" y2="7"></line>
            <line x1="10" y1="11" x2="10" y2="17"></line>
            <line x1="14" y1="11" x2="14" y2="17"></line>
            <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"></path>
            <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"></path>
          </svg>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>